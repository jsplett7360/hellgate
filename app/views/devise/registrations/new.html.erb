<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <div class="text-center">
        <% if params[:plan] == '2' %>
          <h1>Book your tickets</h1>
          <p>Book your reservation for Jon's show for July 28th, 2017.</p>
        <% else %>
          <h1>Basic Account</h1>
          <p>Sign up for free and see events that are happening in the future.</p>
        <% end %>
      </div>
      <div class="well">
        <h2>Sign up</h2>
        <% if params[:plan] == '2' %>
          <%= render "pro_form" %>
        <% else %>
          <%= render "basic_form" %>
        <% end %>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>